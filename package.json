{
  "name": "sauce4zwift",
  "productName": "Sauce for Zwift™",
  "version": "0.0.2",
  "description": "Overlay for Zwift™",
  "main": "src/loader.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "start-debug-brk": "electron --inspect-brk .",
    "start-debug": "electron --inspect .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder -p always",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Sauce, LLC",
  "license": "UNLICENSED",
  "dependencies": {
    "@saucellc/zwift-packet-monitor": "https://github.com/SauceLLC/zwift-packet-monitor.git#5a0b1ee7f644e0",
    "electron-updater": "4.6.5",
    "express": "4.17.3",
    "express-ws": "5.0.2",
    "sudo-prompt": "9.2.1"
  },
  "devDependencies": {
    "electron": "17.1.0",
    "electron-builder": "22.14.13",
    "electron-notarize": "1.1.1",
    "eslint": "8.10.0"
  },
  "build": {
    "appId": "io.saucellc.sauce4zwift",
    "artifactName": "sauce4zwift-${version}.${ext}",
    "publish": [{
      "provider": "github",
      "owner": "SauceLLC",
      "repo": "sauce4zwift-releases"
    }],
    "mac": {
      "target": {
        "target": "zip"
      },
      "category": "public.app-category.healthcare-fitness",
      "identity": "Sauce, LLC (7P47F44SKP)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "afterSign": "build/scripts/notarize.js"
  }
}
